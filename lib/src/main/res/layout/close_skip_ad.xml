<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_view"
    android:layout_width="74dp"
    android:layout_height="20dp"
    android:background="@drawable/time_close_back"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="7.2dp"
        android:gravity="center_vertical"
        android:text=""
        android:textColor="@color/white"
        android:textSize="12sp" />

    <View
        android:id="@+id/interval_view"
        android:layout_width="0.5dp"
        android:layout_height="9.6dp"
        android:layout_marginLeft="4.3dp"
        android:background="#979797"
        android:gravity="center_vertical">

    </View>

    <TextView
        android:id="@+id/skip_ad"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="4.8dp"
        android:gravity="center_vertical"
        android:text="跳过"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/close_ad"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical"
        android:src="@drawable/video_close" />

</LinearLayout>